<%= start_content -%>
	<h1>Listing simulations</h1>
	
	<table>
	  <tr>
	    <th>Description</th>
	  </tr>
	
	<% for simulation in @simulations %>
	  <tr>
	    <td><%=h simulation.description %></td>
	    <td><%= link_to 'Show', simulation %></td>
	    <td><%= link_to 'Edit', edit_simulation_path(simulation) %></td>
	    <td><%= link_to 'Destroy', simulation, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
	
	<br />
<%= end_content %>
<%= start_corner -%>
	<%= button_link_to 'New simulation', new_simulation_path %>
<%= end_corner -%>
	