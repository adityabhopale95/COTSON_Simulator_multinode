<%= start_content %>
	<h2>Simulation: <%=h @experiment.simulation.description %></h2>
	<table >
		<tr>
			<td><b>Started at</b></td>
			<td><b>Ended at</b></td>
			<td><b>Experiment data ID</b></td>
		</tr>
		<tr>
			<td><%=h @experiment.started_at %></td>
			<td><%= @experiment.ended_at ? h(@experiment.ended_at) : '<b>Running</b>' %></td>
			<td><%= @experiment.experiment_data.id if @experiment.experiment_data %></td>
		</tr>
	</table>

<%= end_content %>
<%= start_corner %>
	<%= render :partial => "basic_corner" %>
<%= end_corner %>

<% if @experiment.ended_at == nil %>
	<script type="text/javascript">
	function table_refresh()
	{
		window.location.reload()
	}
	
	t_id=setTimeout("table_refresh()",2000);
	</script>
<% end %>
