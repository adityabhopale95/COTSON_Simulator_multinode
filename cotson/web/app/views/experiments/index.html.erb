<%= start_content %>
	<h1>Listing experiments</h1>
	
	<table>
	  <tr>
	    <th>Id</th>
	    <th>Simulation</th>
	    <th>Started at</th>
	    <th>Ended at</th>
	  </tr>
	
	<% for experiment in @experiments %>
	  <tr>
	    <td><%=link_to h(experiment.id), experiment %></td>
	    <td><%=h experiment.simulation.description %></td>
	    <td><%=h experiment.started_at %></td>
	    <td><%=h experiment.ended_at %></td>
	    <td>
	    	<% if @graphic_support && experiment.experiment_data != nil -%>
	       		<%=link_to image_tag("chart.png", :height => "14", :border => 0),  :action => "graphic", :id => experiment.id %>
	       	<% end %>
	    </td>
	    <td><%= link_to 'Destroy', experiment, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
	
	<br />
<%= end_content %>
<%= start_corner %>
	<%= button_link_to 'New experiment', new_experiment_path %>
<%= end_corner %>
