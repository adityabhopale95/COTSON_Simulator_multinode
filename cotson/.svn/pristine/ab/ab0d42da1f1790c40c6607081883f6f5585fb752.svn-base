$: << File.expand_path(File.dirname(__FILE__) + '/../share')

require 'cotson'

begin
	if !Execute.runs?(DB['screen_pid']) then
		puts "no existing execution running"
	else if ARGV.length==0 or ARGV[0].to_i==0 then
		puts "no valid runtime duration given"
	else
		a=Send.command("runtimeduration #{ARGV[0]})")
		puts a ? a : "could not connect to command socket"
		a=Send.command("go")
		puts a ? a : "could not connect to command socket"
	end end
rescue Exception => e
	finish e
end
