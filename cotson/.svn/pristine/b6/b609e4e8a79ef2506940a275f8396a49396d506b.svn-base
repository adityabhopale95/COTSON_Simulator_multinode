# IMPORTANT: Changes of this file will only
# be effective after all the database_[HOSTNAME].yml
# are deleted.

# Each daemon should use a different database
# You can use the wildcard [%MACHINE%] that
# will be substituted by part of the daemon
# computer hostname

development:
  adapter: sqlite3
  database: db/development.[%MACHINE%].sqlite3
  timeout: 5000

test:
  adapter: sqlite3
  database: db/test.[%MACHINE%].sqlite3
  timeout: 5000

production:
  adapter: sqlite3
  database: db/production.[%MACHINE%].sqlite3
  timeout: 5000

